<header class="main-header">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-5 col-md-2">
				<a href="/" class="main-header_home-link">
					<img src="/images/logo-mercado-liebre.svg">
				</a>
			</div>

			<div class="col-7 col-md-6">
				<form action="/search" method="GET" class="search-form">
					<input type="text" name="keywords" placeholder="Buscar productos, marcas y más"
						class="search-form_input">
					<button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
				</form>
			</div>

			<div class="col-12 col-md-4">
				<a href="#" class="main-header_credit-link">
					<i class="fas fa-hand-holding-usd"></i>
					Comprá en cuotas y sin tarjeta de crédito
				</a>
			</div>
		</div>

		<button class="btn-toggle-navbar">
			<i class="fas fa-bars"></i>
		</button>
		<nav class="main-navbar">
			<% if (locals.isLogged && locals.colorIsLogged) { %>
				<ul class="left-navbar">
					<li><a href="/products">Todos los productos</a></li>
					<li><a href="#">Ofertas</a></li>
					<li><a href="#">Tiendas Oficiales</a></li>
					<li><a href="/products/create">Vender</a></li>
					<li><a href="#">Ayuda</a></li>
					<li><a href="/gracias">gracias</a></li>
					<li><a href="/chau">Olvidar el color</a></li>
				</ul>
				<ul class="right-navbar">
					<li class="nav-item dropdown">
						<ul class="nav-link"
							onclick="document.querySelector('.dropdown-menu').classList.toggle('show')">
							<a>
								<%= locals.userLogged.nombreApellido %> v
							</a>
							<img src="/images/users/<%= locals.userLogged.avatar %>" style="border-radius: 100%;">
						</ul>
						<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
							<a class="dropdown-item" href="/users/profile">My profile</a>
							<hr class="dropdown-divider">
							<a class="dropdown-item" href="/users/logout">Logout</a>
						</ul>
					</li>
					<li><a href="#">Mis compras <i class="fas fa-shopping-basket"></i></a></li>
				</ul>

				<% } else if (locals.colorIsLogged) { %>
					<ul class="left-navbar">
						<li><a href="/products">Todos los productos</a></li>
						<li><a href="#">Ofertas</a></li>
						<li><a href="#">Tiendas Oficiales</a></li>
						<li><a href="#">Ayuda</a></li>
						<li><a href="/gracias">gracias</a></li>
						<li><a href="/chau">Olvidar el color</a></li>
					</ul>
					<ul class="right-navbar">
						<li class="nav-item"><a class="nav-link" href="/users/register">Creá tu cuenta <i
							class="far fa-address-card"></i></a></li>
					<li class="nav-item"><a class="nav-link" href="/users/login">Ingresá <i
							class="fas fa-sign-in-alt"></i></a></li>
					</ul>
					<% }else if(locals.isLogged) {%>
						<ul class="left-navbar">
							<li><a href="/products">Todos los productos</a></li>
							<li><a href="#">Ofertas</a></li>
							<li><a href="#">Tiendas Oficiales</a></li>
							<li><a href="#">Ayuda</a></li>
							<li><a href="/products/create">Vender</a></li>
							<li><a href="/color">Colors</a></li>
						</ul>
						<ul class="right-navbar">
							<li class="nav-item dropdown">
								<ul class="nav-link"
									onclick="document.querySelector('.dropdown-menu').classList.toggle('show')">
									<a>
										<%= locals.userLogged.nombreApellido %> v
									</a>
									<img src="/images/users/<%= locals.userLogged.avatar %>" style="border-radius: 100%;">
								</ul>
								<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
									<a class="dropdown-item" href="/users/profile">My profile</a>
									<hr class="dropdown-divider">
									<a class="dropdown-item" href="/users/logout">Logout</a>
								</ul>
							</li>
							<li><a href="#">Mis compras <i class="fas fa-shopping-basket"></i></a></li>
						</ul>
					<% } else { %> 
						<ul class="left-navbar">
							<li><a href="/products">Todos los productos</a></li>
							<li><a href="#">Ofertas</a></li>
							<li><a href="#">Tiendas Oficiales</a></li>
							<li><a href="#">Ayuda</a></li>
							<li><a href="/color">Colors</a></li>
						</ul>
						<ul class="right-navbar">
							<li class="nav-item"><a class="nav-link" href="/users/register">Creá tu cuenta <i
										class="far fa-address-card"></i></a></li>
							<li class="nav-item"><a class="nav-link" href="/users/login">Ingresá <i
										class="fas fa-sign-in-alt"></i></a></li>
						</ul>
						<% } %> 

		</nav>
	</div>
</header>