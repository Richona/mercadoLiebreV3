<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {title: "colors"}) %>

    <body class="colors__<%= locals.user && user.color %>">
        <!-- Header -->
        <%- include('../partials/headerNavbar') %>
            <main class="register">
                <% if (!locals.user) { %>
                    <form action="" class="register_section" method="POST">
                        <div class="form_box">
                            <label for="nombre" class="">Ingrese su nombre</label>
                            <input type="text" id="nombre" name="nombre" class="form_box_cajas <%= locals.errors && errors.nombre ? "form_box_cajas-inValid" : null %>" value="<%= locals.old ? old.nombre : null %>">
                                <small class="form_box_mensaje-error"><%= locals.errors && errors.nombre && errors.nombre.msg %></small>
                        </div>
                        <div class="form_box">
                            <label for="" class="">Colores</label>
                            <select name="color" id="" class="form_box_cajas">
                                <option value="rojo" <%= locals.old && old.color === "rojo" && "selected" %>>Rojo</option>
                                <option value="azul" <%= locals.old && old.color === "azul" && "selected" %>>Azul</option>
                                <option value="verde" <%= locals.old && old.color === "verde" && "selected" %>>Verde</option>
                                <option value="amarillo" <%= locals.old && old.color === "amarillo" && "selected" %>>Amarillo</option>
                            </select>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input type="checkbox"  class="form-check-input" name="remember_color" <%= locals.old && old.remember_color === "on" && "checked" %>>Recordar color
                            </label>
                        </div>
                        <div class="form_box">
                            <label for="email" class="">Ingrese su email</label>
                            <input type="email" id="email" name="email" class="form_box_cajas <%= locals.errors && errors.email ? "form_box_cajas-inValid" : null %>" value="<%= locals.old ? old.email : null %>">
                                <small class="form_box_mensaje-error"><%= locals.errors && errors.email && errors.email.msg %></small>
                        </div>
                        <div class="form_box">
                            <label for="edad" class="">Ingrese su edad</label>
                            <input type="number" id="edad" name="edad" class="form_box_cajas <%= locals.errors && errors.edad ? "form_box_cajas-inValid" : null %>" value="<%= locals.old ? old.edad : null %>">
                                <small class="form_box_mensaje-error"><%= locals.errors && errors.edad && errors.edad.msg %></small>
                        </div>
                        <div class="form_buttons_login">
                          <button type="submit" >Enviar</button>  
                        </div>
                    </form>
                <% } else{ %>
                    <div>
                        <h1 class="products-title">Hola <%= locals.user && user.nombre ? user.nombre: "desconocido" %> , elegiste el color: <%= locals.user && user.color %>, tu email es:
                            <%= locals.user && user.email %> <%= locals.user && user.edad ? `y tu edad es: ${user.edad}.` : "." %></h1>
                    </div>
                <% } %> 
                
            </main>
            <!-- footer -->
            <%- include('../partials/footer') %>
    </body>